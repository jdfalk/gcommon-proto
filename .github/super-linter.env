# guid: f2a3b4c5-d6e7-8901-bcde-f23456789abc

# Super Linter Configuration for GCommon
# Go libraries and Protocol Buffer definitions repository

# General Settings
DEFAULT_BRANCH=main
VALIDATE_ALL_CODEBASE=false
FILTER_REGEX_EXCLUDE=.*\.git/.*|.*\.github/copilot/.*|.*\.vscode/.*|.*node_modules/.*|.*\.cache/.*|.*vendor/.*|.*\.pb\.go$|.*_grpc\.pb\.go$|.*TODO\.md$

# Only validate these (no FIX_ option available)
VALIDATE_YAML=true
VALIDATE_GITHUB_ACTIONS=true
VALIDATE_GITLEAKS=true
VALIDATE_DOCKERFILE_HADOLINT=true

# Auto-fix Settings (use FIX_ as default behavior)
FIX_GO=true
FIX_PROTOBUF=true
FIX_MARKDOWN=true
FIX_JSON_PRETTIER=true
FIX_BASH=true
FIX_PYTHON_BLACK=true
FIX_PYTHON_RUFF=true
FIX_SHELL_SHFMT=true

# Configuration file paths
PYTHON_BLACK_LINTER_RULES=.github/linters/.python-black
PYTHON_PYLINT_LINTER_RULES=.github/linters/.pylintrc
PYTHON_RUFF_LINTER_RULES=.github/linters/ruff.toml
BASH_SEVERITY=error
MARKDOWN_LINTER_RULES=.github/linters/.markdownlint.json
YAML_LINTER_RULES=.github/linters/.yaml-lint.yml

# Go Configuration
GO_MODULES=true

# Performance settings
MULTI_STATUS=true
PARALLEL=true

# Output settings
CREATE_LOG_FILE=true
SAVE_SUPER_LINTER_OUTPUT=true
